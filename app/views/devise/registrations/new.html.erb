<div class="row text-center login-screen" style="vertical-align:middle;">
  <div class="col-md-6 col-md-offset-2 logo-image text-center">
    <%= render 'shared/organization_logo' %>
  </div>
  <div class="col-md-4 text-center">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.input :email,
                    required: true,
                    email_field: true,
                    autofocus: true,
                    autocomplete: "email",
                    input_html: {class: "form-control form-field-display-block required-field wide-response"},
                    label_html: {class: "form-field-display-block"} %>
      </div>

      <div class="form-group">
        <%= f.input :password,
                    required: true,
                    email_field: true,
                    autofocus: true,
                    autocomplete: "new-password",
                    # hint: ("<em>(#{@minimum_password_length} characters minimum)</em>".html_safe if @minimum_password_length),
                    input_html: {class: "form-control form-field-display-block required-field wide-response"},
                    label_html: {class: "form-field-display-block"} %>
      </div>

      <div class="form-group">
        <%= f.input :password_confirmation,
                    required: true,
                    email_field: true,
                    autofocus: true,
                    autocomplete: "new-password",
                    hint: ("<em>(#{@minimum_password_length} characters minimum)</em>".html_safe if @minimum_password_length),
                    input_html: {class: "form-control form-field-display-block required-field wide-response"},
                    label_html: {class: "form-field-display-block"} %>
      </div>

      <div class="actions" id="login_button">
        <%= f.button :submit, "Sign up", class: "btn btn-success button" %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>

